{% extends "/main.twig" %}

{% block main %}
<main id="profile-delete">
    <section class="section">
        <div class="container">
            <div class="has-text-danger">
                {{ error }}
            </div>
            <div class="field">
                <h2 class="title is-3 has-text-danger">WARNING</h2>
                <h2 class="title is-4">PLEASE ENTER LOG IN DETAILS TO CONTINUE UPDATE</h2>
            </div>
            <div class="column is-4 is-offset-4">
                <form action="confirmHandling.php" method="post">
                    <div class="field">
                        <div class="control has-icons-left">
                            <input class="input" type="email" name="email" id="email" placeholder="Enter email id">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control has-icons-left">
                            <input class="input" type="password" name="password" id="password" placeholder="Enter password">
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                    </div>
                    <div class="field">
                        <button type="submit" class="button is-danger">Update Details</button>
                    </div>
                    <div class="field">
                        <a href="index.php" class="button is-primary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>
{% endblock main %}